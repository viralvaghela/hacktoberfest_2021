<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryDetails">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#3A575E">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Country name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/countryname">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_share"
            android:onClick="share">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Country in "
            android:layout_marginLeft="70dp">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/indicatior"
            android:padding="5dp"
            android:src="@drawable/indicator"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="180dp"
            app:cardCornerRadius="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="region"
            android:layout_marginLeft="220dp">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            app:cardBackgroundColor="#3A575E"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total case"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today case"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#3A575E"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <TextView
                        android:id="@+id/totalcase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:layout_marginStart="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/todaycase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="170dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            app:cardBackgroundColor="#3A575E"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total death"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today death"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="62.5dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#3A575E"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <TextView
                        android:id="@+id/totaldeath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/todaydeath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="170dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            app:cardBackgroundColor="#3A575E"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total recovered"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today recovered"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#3A575E"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <TextView
                        android:id="@+id/totalrecovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/todayrecovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="177dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            app:cardBackgroundColor="#3A575E"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active case"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="20dp"
                        android:padding="10dp"
                        android:text="Critical case"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#3A575E"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <TextView
                        android:id="@+id/activecase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/criticalcase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginStart="170dp"
                        android:layout_marginLeft="20dp"
                        >
                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>