<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cusparent"
    >
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/radiogroup"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter from a-z"
            android:id="@+id/filatoz"
            android:layout_margin="5dp"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter from z-a"
            android:id="@+id/filztoa"
            android:layout_margin="5dp"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter from 1-31"
            android:id="@+id/fil1to31"
            android:layout_margin="5dp"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter from 31-1"
            android:id="@+id/fil31to1"
            android:layout_margin="5dp"
            >
        </RadioButton>
    </RadioGroup>

</LinearLayout>